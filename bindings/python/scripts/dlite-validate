#!/usr/bin/env python3
"""Validator for dlite datamodels.
"""
import argparse
import json
import re
import yaml
from pathlib import Path

import dlite


def parse(url, driver, options=None):
    """Parse url and return an instance."""
    match = re.match(r'^([a-zA-Z][a-zA-Z0-9+.-]*)://', url)
    if match and match.groups[0].lower() != 'file':
        if driver:
            return dlite.Instance.from_location(driver, url, options=options)
        else:
            return dlite.Instance.from_url(url, options=options)
    else:
        path = url[7:] if url.lower().startswith('file://') else url
        if driver:
            return dlite.Instance_from_location(driver, path, options=options)
        fileext = Path(path).suffix.lstrip('.').lower()

        # For json and yaml, use the Python parser instead of dlite, since
        # they have better error reporting for invalid serialisation
        if fileext == 'json':
            with open(path, 'rt') as f:
                return dlite.Instance.from_dict(json.load(f))
        elif fileext in ('yaml', 'yml'):
            with open(path, 'rt') as f:
                return dlite.Instance.from_dict(yaml.save_load(f))
        return dlite.Instance.from_location(fileext, path, options=options)


def main():
    """Datamodel validator"""
    parser = argparse.ArgumentParser(
        description='DLite datamodel validator.',
    )
    parser.add_argument(
        'url',
        help='URL to storage to validate.  Relative file paths are allowed.'
    )
    parser.add_argument(
        '--driver', '--plugin', '-d',
        help='Storage plugin to use when loading the instance.  If `url` '
        'is a file path, the default is to infer the driver from the file '
        'extension.',
    )
    parser.add_argument(
        '--options', '-o',
        help='Options parsed on to the dlite storage plugin.'
    )
    parser.add_argument(
        '--show', '-s', action='store_true',
        help='Print the json-serialisation of the instance to standard output.'
    )

    args = parser.parse_args()

    try:
        inst = parse(args.url, args.driver, args.options)
    except Exception as exc:
        print(f'{args.url}: {exc.__class__.__name__}: {exc}')
    else:
        print(f'{args.url}: validated')

        if (args.show):
            print(inst)


if __name__ == '__main__':
    main()
